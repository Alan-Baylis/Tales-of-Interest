doctype html
html(ng-app='toi')
  head
    meta(charset='UTF-8', name='viewport', content='width=device-width, initial-scale=1')
    title Tales of Interest!

  body(ng-class="{'freeze-body':showHistory}")
    .container
      .navbar.navbar-default.navbar-fixed-top
          button(ng-click="showSearch = !showSearch").btn.btn-default.navbar-btn.col-xs-2
            span(ng-if="!showSearch").glyphicon.glyphicon-search
            span(ng-if="showSearch").glyphicon.glyphicon-remove.text-danger

          .col-xs-8.text-center
            h4 Tales of Interest

          button(ng-click="showHistory = !showHistory").btn.btn-default.navbar-btn.col-xs-2
            span(ng-if="!showHistory").glyphicon.glyphicon-list
            span(ng-if="showHistory").glyphicon.glyphicon-remove.text-danger

      .title-spacer
      div(ng-view).index-view


    div(history-panel-dir)
    div(search-panel-dir)

    script(src='require.js')
